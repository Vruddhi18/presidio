{
    "name": "Presidio Analyzer Transformers",
    "build": {
        "dockerfile": "../../presidio-analyzer/Dockerfile.transformers.dev",  // Specify the path to your Dockerfile
        "context": "../../presidio-analyzer"  // Specify the build context where your Dockerfile is located
    },
    "workspaceMount": "source=${localWorkspaceFolder}/presidio-analyzer,target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
  "postAttachCommand": "chmod +x ./install_dependencies.sh && ./install_dependencies.sh && poetry shell",
  "customizations": {
    "extensions": [
      "ms-python.python", 
    ],
  }
}

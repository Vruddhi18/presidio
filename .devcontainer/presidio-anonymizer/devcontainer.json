{
    "name": "Presidio Anonymizer",
    "build": {
        "dockerfile": "../../presidio-anonymizer/Dockerfile.dev",  // Specify the path to your Dockerfile
        "context": "../../presidio-anonymizer"  // Specify the build context where your Dockerfile is located
    },
    "workspaceMount": "source=${localWorkspaceFolder}/presidio-anonymizer,target=/workspace,type=bind",
    "workspaceFolder": "/workspace",
    "onCreateCommand": [
    "poetry",
    "install",
    "--no-interaction"
  ],
  "postAttachCommand": "poetry shell",
  "customizations": {
    "extensions": [
      "ms-python.python", 
    ],
  }
}
